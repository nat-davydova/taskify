.edit-task-modal.modal#edit-task-modal(tabindex="-1" role="dialog" aria-labelledby="edit-task-modal-title" aria-hidden="true")
    .modal-dialog.modal-dialog-centered
        .modal-content

            // modal title
            .modal-header
                h5.modal-title#edit-task-modal-title Edit Task
                button.close(type="button" aria-label="Close")
                    span(aria-hidden="true") &times;

            // modal body
            .modal-body
                form.add-new-task__form
                    .form__group.form-group
                        label.form__label.form__label--required(for="edit-task-title") New Task Title
                        input#edit-task-title.edit-task__title.form-control(type="text" placeholder="New Task Title" aria-label="New Task Title" required)
                        .invalid-feedback Please add a task title

            //modal footer
            .modal-footer.d-flex.justify-content-between
                button.btn.btn-danger.close-btn(type="button") Close
                button.save-edited-task.btn.btn-success(type="button") Save
