.del-task.modal.fade#del-task-modal(tabindex="-1" role="dialog" aria-labelledby="del-task-title" aria-hidden="true")
    .modal-dialog.modal-dialog-centered
        .modal-content

            // modal title
            .modal-header
                h5.modal-title#del-task-title Do you want to delete this task?
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;

            //modal footer
            .modal-footer.d-flex.justify-content-between
                button.btn.btn-danger(type="button" data-dismiss="modal") Close
                button.del-task.btn.btn-success(type="button") Delete
