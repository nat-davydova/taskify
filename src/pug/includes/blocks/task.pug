//single task
template#task
    .task.card
        .card-body.d-flex.align-items-center.py-2

            //task checklist
            form.task__form.mr-3
                .task__form-block.form-check
                    input.task__checkbox(type="checkbox")

            //task title
            .task__title
                p

            //task btn bar
            .task__btn-bar.d-flex.ml-auto

                //delete task btn
                button.task__del.btn.btn--iconed.btn-sm(type="button" data-toggle="modal" data-target="#del-task-modal")
                    span.material-icons close
